pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                git branch : 'DEV_DEPLOYMENT', credentialsId : 'github-creds', url: 'https://github.com/philemonboaz/Expense_Tracker_Flutter_SpringBoot.git'
            }
        }
        stage('Build') {
            steps {
                script{
                    if (isUnix()) {
                        sh 'mvn clean install -DskipTests'
                    } else {
                        bat 'mvn clean install -DskipTests'
                    }
                }
            }
        }
        stage('Docker Build') {
            steps {
                script{
                    docker.build("expense-tracker-backend:latest")
                }
            }
        }
        stage('Run Container') {
            steps {
                script{
                    if (isUnix()) {
                        sh 'docker rm -f expense-backend || true'
                        sh 'docker run -d --name expense-backend -p 9091:9091 expense-tracker-backend:latest'
                    } else {
                        bat 'docker rm -f expense-backend || true'
                        bat 'docker run -d --name expense-backend -p 9091:9091 expense-tracker-backend:latest'
                    }
                }
            }
        }
        stage('Archive') {
            steps {
                archiveArtifacts artifacts : 'target/*.jar', fingerprint: true
            }
        }
    }
}